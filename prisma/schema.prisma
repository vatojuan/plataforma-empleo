datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model LegalDocument {
  id        Int      @id @default(autoincrement())
  url       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model User {
  id             Int             @id @default(autoincrement())
  email          String          @unique
  name           String
  password       String?
  role           String?
  confirmed      Boolean         @default(false)
  googleId       String?
  createdAt      DateTime        @default(now())
  companyName    String?
  description    String?
  phone          String?
  cvUrl          String?         // Campo para almacenar el URL del CV
  jobs           Job[]
  legalDocuments LegalDocument[]
  profilePicture String?         // Campo para la imagen de perfil
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
