datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String?  // Solo para registro con email
  role      String?  // "empleado" o "empleador"; inicialmente null
  confirmed Boolean  @default(false)
  googleId  String?  // Guarda el ID de Google para usuarios OAuth
  createdAt DateTime @default(now())
  
  jobs      Job[]
}

model Job {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
